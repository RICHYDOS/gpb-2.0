{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "price": {
      "type": "biginteger",
      "required": true
    },
    "discountPrice": {
      "type": "biginteger"
    },
    "productImage": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "exclusivity": {
      "type": "boolean",
      "default": false
    },
    "backgroundColourOptions": {
      "displayName": "backgroundChange",
      "type": "component",
      "repeatable": false,
      "component": "product.background-change",
      "required": true
    }
  }
}
